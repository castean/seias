<h3>Acciones</h3>

<table class="table table-striped">
  <thead>
      <tr>
      	<th>Departamento</th>
        <th>Factor Crítico</th>
        <th>Descripción</th>
        <th>Peso %</th>
       <!--  <th>Unidad de Medida</th> -->
        <th></th>
        <th></th>
        <th></th>
      </tr>
  </thead>

<% @critical_success_factors.each do |critical_success_factor| %>
  <tr>
  	<td><%= critical_success_factor.program.department.name %></td>
    <td><%= critical_success_factor.title %></td>
    <td><%= critical_success_factor.description %></td>
    <td><%= critical_success_factor.percentage %></td>
    <!-- <td><%= critical_success_factor.unit_of_measurement_description %></td> -->
    <td><%= link_to 'Detalles', critical_success_factor %></td>
    <% if can? :update, critical_success_factor %>
    <td>
        <%= link_to(edit_critical_success_factor_path(critical_success_factor)) do %>
            <%= image_tag("edit.png") %>
        <% end %>
    </td>
    <% end %>
    <% if can? :destroy, critical_success_factor %>
    <td>
        <%= link_to(critical_success_factor, :confirm => '¿Esta seguro?', :method => :delete,:remote =>true) do %>
            <%= image_tag("delete.png") %>
        <% end %>
    </td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if can? :create, CriticalSuccessFactor %>
<%= link_to 'Registrar Acción', new_critical_success_factor_path, :class => "btn primary" %>
<% end %>