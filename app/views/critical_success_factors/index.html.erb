<% @critical_success_factors.each do |critical_success_factor| %>
  <tr>
    <td><%= critical_success_factor.title %></td>
    <td><%= critical_success_factor.description %></td>
    <td><%= critical_success_factor.percentage %></td>
    <td><%= critical_success_factor.unit_of_measurement_description %></td>
    <td><%= link_to 'Ver detalles', critical_success_factor %></td>
    <td><%= link_to 'Editar', edit_critical_success_factor_path(critical_success_factor) %></td>
    <td><%= link_to 'Eliminar', critical_success_factor, confirm: '¿Está seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

