<h3>Listado de Oficios Dispobibles</h3>
<div style="OVERFLOW: auto; WIDTH: 100%; HEIGHT: 100%">
<table class="table table-striped">
  <thead>
      <tr>

        <th>No. Oficio</th>
        <th>De</th>
        <th>Para</th>
        <th>Dirección</th>
        <th>Departamento</th>
        <th>Priority</th>
        <th>Status</th>
        <th>Fecha de Creación</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
  </thead>

<% @offices.each do |office| %>
  <tr>

    <td><%= office.internal_office_number %></td>
    <td><%= Person.find(office.person_id).fullname  %>
    <td><%= User.find(office.user_id).fullname %></td>
    <td><%= office.user.department.direction.name %></td>
    <td><%= office.user.department.name %></td>
    <td><%= Priority.find(office.priority_id).name %></td>
    <td><%= office.status.name %></td>
    <td><%= office.created_at %></td>
    <td><%= link_to 'Ver', office %></td>
    <td><%= link_to 'Editar', edit_office_path(office) %></td>
    <% if office.status_id == 3%>
        <td><%= link_to 'Cerrar', "offices/end_office/" + office.id.to_s, confirm: 'Esta Usted Seguro?' %></td>
    <%end%>
  </tr>
<% end %>
</table>
</div>
<br />

<%= link_to 'New Office', new_office_path %>
