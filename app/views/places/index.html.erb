<h1>Listing places</h1>

<table>
  <tr>
    <th>Place type</th>
    <th>Name</th>
    <th>Address</th>
    <th>Town</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.place_type.name %></td>
    <td><%= place.name %></td>
    <td><%= place.address %></td>
    <td><%= place.town.name %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
</br>

<%= link_to 'New Place', new_place_path %>

<div class="pager">
	<%= paginate @places %>
</div>