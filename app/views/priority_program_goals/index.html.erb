<h3>Listado Objetivos Programa Prioritario</h3>

<table class="table table-striped">
  <thead>
	  <tr>
	  	<th>Programa Prioritario</th>
	    <th>Objetivo</th>
	    <th>Descripción</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	</thead>
<% @priority_program_goals.each do |priority_program_goal| %>
  <tr>
  	<td><%= priority_program_goal.priority_program.name %></td>
    <td><%= priority_program_goal.name %></td>
    <td><%= priority_program_goal.description %></td>
    <td><%= link_to 'Estrategias', priority_program_goal %></td>
