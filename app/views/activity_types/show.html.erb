<p id="notice"><%= notice %></p>

<p>
  <h4>Nombre de la Acci√≥n:</h4>
  <%= @activity_type.name %>
</p>
<br />
  <%
  	annio = Date.today.year
  	mes = Date.today.strftime("%B")
  	dia = Date.today.day
  	#fecha = Date.today.strftime("%D")
  	fecha = Date.today
  	fechaini = (fecha - (dia-1))
  	dayofyear = Date.today.yday
  	anioini = (fecha - (dayofyear-1)) 
  	
  	sumah = @activity_type.activities.sum((:qty_men), :conditions => ['activity_date_start >= ?', fechaini] )  
  	acumuladoh = @activity_type.activities.sum((:qty_men), :conditions => ['activity_date_start >= ?', anioini] )
  	sumam = @activity_type.activities.sum((:qty_women), :conditions => ['activity_date_start >= ?', fechaini] )  
  	acumuladom = @activity_type.activities.sum((:qty_women), :conditions => ['activity_date_start >= ?', anioini] )
  	#sumav = @activity_type.activities.sum((:value), :conditions => ['activity_date_start >= ?', fechaini] )  
  	#acumuladov = @activity_type.activities.sum((:value), :conditions => ['activity_date_start >= ?', anioini] )
  	
  	suma = sumah + sumam
  	acumulado = acumuladoh + acumuladom
   %>

<p>
  <h4>Unidad de Medida:</h4>
  <%= @activity_type.unit_of_measurement.name %> de <%= @activity_type.measurement_description %></br> 	
  	</br>
  	<b><i>Cantidad del Mes de <%=mes%> : </i></b><%= suma %> personas</br>
  	<b><i>Acumulado Anual <%=annio%> : </i></b><%= acumulado %> personas</br>
</p>
<br />
  <b>Factores criticos que Afecta:</b>
</p>
<% @activity_type.critical_success_factors.order(:title).each do |fce| %>
    <ul>
      <li>
        <b><%= fce.title %>:</b>
      </li>
    </ul>
<%end%>
</br>

<p>
  <b>Actividades:</b>
</p>
<% x = params[:page]  #ISC Christian Alderete 
						#subpaginate for acitivies into activity_types
   w = 0
   y = 20
   
	if x.nil?
      w = 1
   	  y = 20
   	else
   	  y = y.to_i * x.to_i
   	  w = y.to_i - 19  
   	end
   	@activity_type.activities[w..y].each do |actividades|
%>
	<ul>	
		<li>
			<%= link_to actividades.description, activity_path(actividades.id)%>
		</li>
	</ul>
<%end%>
<br />

<div class="pager">
	<%= paginate @activitypage %>
</div>


<div class="form-actions btn-group">
	<% if can? :update, @activity_type %>
		<%= link_to 'Editar', edit_activity_type_path(@activity_type), :class => "btn" %>
	<%end%>
<%= link_to 'Atras', activity_types_path, :class => "btn" %>
</div>
</br>
