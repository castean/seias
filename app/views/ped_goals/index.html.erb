<% @ped_goals.each do |ped_goal| %>
<% c = Ped.find(ped_goal.ped_id)%>
<% d = PedSubTheme.find(ped_goal.ped_sub_theme_id)%>
  <tr>
    <td><%= c.name %></td>
    <td><%= d.name %></td>
    <td><%= ped_goal.name %></td>
    <td><%= ped_goal.description %></td>
    <td><%= link_to 'Show', ped_goal %></td>
    <td><%= link_to 'Edit', edit_ped_goal_path(ped_goal) %></td>
    <td><%= link_to 'Destroy', ped_goal, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

