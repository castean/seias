<h3>Objetivos del Programa Estatal de Desarrollo</h3>

<table class="table table-striped">
  <thead>
	  <tr>
	  	<th>Ped</th>
	    <th>Ped Sub Tema</th>
	    <th>Objetivos</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
  </thead>
</br>

<% @ped_goals.each do |ped_goal| %>

  <tr>
    <td><%= ped_goal.ped.name %></td>
    <td><%= ped_goal.ped_sub_theme.name %></td>
    <td><%= ped_goal.name %>: <%= ped_goal.description %></td>
    <td><%= link_to 'Estrategias', ped_goal %></td>
    <% if can? :update, ped_goal %>
	    <td><%= link_to(edit_ped_goal_path(ped_goal)) do %>
	    		<%= image_tag("edit.png") %>
	    	<%end%>
	    </td>
    <%end%>
    <% if can? :destroy, ped_goal %>
	    <td><%= link_to(ped_goal, :confirm => 'Â¿Esta usted seguro?', :method => :delete, :remote => true) do %>
	    		<%= image_tag("delete.png") %>
	    	<%end%>
	    </td>
    <%end%>
  </tr>
<% end %>
</table>

<br />
<% if can? :create, @ped_goals %>
	<%= link_to 'Agregar Objetivo', new_ped_goal_path, :class => "btn primary" %>
<%end%>
