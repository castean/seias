<p>
  <b>Tipo de Actividad:</b>
  <%= @activity.activity_type.name %>
</p>

<p>
  <b>Valor:</b>
  <%= @activity.value %>
</p>

<p>
  <b>Cantidad de Hombres:</b>
  <%= @activity.qty_men %>
</p>

<p>
  <b>Cantidad de Mujeres:</b>
  <%= @activity.qty_women %>
</p>

<p>
  <b>Descripción:</b>
  <%= @activity.description %>
</p>

<p>
  <b>Fecha Inicio:</b>
  <%= l(@activity.activity_date_start.to_date, :format => :long) %>
</p>

<p>
  <b>Fecha Fin:</b>
  <%= l(@activity.activity_date_end.to_date, :format => :long) %>
</p>

<p>
  <b>Localidad:</b>
  <%= @activity.town.name %>
</p>

<p>
  <b>Grupo:</b>
  <%= @activity.group.name %>
</p>

<p>
  <b>Público Objetivo:</b>
  <%= @activity.public_target.name %>
</p>

<%= gmaps("map_options" =>{:auto_zoom => false, :zoom => 7},"markers" => {"data" => @json}) %>

<% if can? :update, @activity %>
	<%= link_to 'Editar', edit_activity_path(@activity) %> |
<%end%>
<%= link_to 'Regresar', activities_path %>
