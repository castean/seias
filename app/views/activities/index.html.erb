<h3>Actividades</h3>

<table class="table-striped">
  <thead>
      <tr>
        <th>Valor</th>
        <th>Descripción</th>
        <th>Fecha</th>
        <th>Localidad</th>
        <th>Grupo</th>
        <th>Público Objetivo</th>

      </tr>
  </thead>
<% @activities.each do |activity| %>
  <tr>
    <td><%= activity.value %></td>
    <td><%= activity.description %></td>
    <td><%= l activity.activity_date.to_date, :format => :short %></td>
    <td><%= activity.town.name %></td>
    <td><%= activity.group.name %></td>
    <td><%= activity.public_target.name %></td>
    <td><%= link_to 'Ver Detalles', activity %></td>
    <td><%= link_to 'Editar', edit_activity_path(activity) %></td>
    <td><%= link_to 'Eliminar', activity, confirm: '¿Está seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Agregar Actividad', new_activity_path, :class => "btn primary" %>
