<h1>Listing counties</h1>

<table>
  <tr>
    <th>Cve mun</th>
    <th>Name</th>
    <th>State</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @counties.each do |county| %>
<% c = State.find(county.state_id)%>
  <tr>
    <td><%= county.cve_mun %></td>
    <td><%= county.name %></td>
    <td><%= c.name %></td>
    <td><%= link_to 'Show', county %></td>
    <td><%= link_to 'Edit', edit_county_path(county) %></td>
    <td><%= link_to 'Destroy', county, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New County', new_county_path %>
<br/>
<div class="pager">
	<%= paginate @counties %>
</div>
