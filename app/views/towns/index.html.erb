<h1>Listing towns</h1>

<table>
  <tr>
    <th>Cve loc</th>
    <th>Name</th>
    <th>County</th>
    <th>State</th>
    <th>Country</th>
    <th>Environment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @towns.each do |town| %>

<% c = Town.find(:all, :conditions =>['select states.cve_ent, states.name, counties.name, towns.name from states, counties, towns where states.cve_ent = counties.state_id and towns.county_id = counties.cve_mun and towns.state_id = states.cve_ent']).id%>
  <tr>
    <td><%= town.cve_loc %></td>
    <td><%= town.name %></td>
    <td><%= c.(1) %></td>
    <td><%= c.(2) %></td>
    <td><%= c.(3) %></td>
    <td><%= town.environment %></td>
    <td><%= link_to 'Show', town %></td>
    <td><%= link_to 'Edit', edit_town_path(town) %></td>
    <td><%= link_to 'Destroy', town, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'New Town', new_town_path %>
</br>
<% form_for :dump, :url=>importarlocalidades_path, :html => { :multipart => true } do |f| -%>
	<label for="dump_file">
        Select a CSV File :
    </label>
    <%= f.file_field :file -%>
   </br>
    <%= submit_tag 'Importar Localidades' -%>
<% end %>
</br>

<div class="pager">
	<%= paginate @towns %>
</div>


