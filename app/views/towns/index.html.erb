<h1>Listing towns</h1>

<table>
  <tr>
    <th>Cve loc</th>
    <th>Name</th>
    <th>County</th>
    <th>State</th>
    <th>Country</th>
    <th>Environment</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @towns.each do |town| %>

<% c = County.find_by_cve_mun_and_state_id(town.county_id,town.state_id) %>
<% d = State.find_by_cve_ent_and_country_id(town.state_id,town.country_id) %>
<% e = Country.find(town.country_id) %>
  <tr>
    <td><%= town.cve_loc %></td>
    <td><%= town.name %></td>
    <td><%= c.name %></td>
    <td><%= d.name %></td>
    <td><%= e.name %></td>
    <td><%= town.environment %></td>
    <td><%= link_to 'Show', town %></td>
    <td><%= link_to 'Edit', edit_town_path(town) %></td>
    <td><%= link_to 'Destroy', town, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'New Town', new_town_path %>
</br>
<% form_for :dump, :url=>importarlocalidades_path, :html => { :multipart => true } do |f| -%>
	<label for="dump_file">
        Select a CSV File :
    </label>
    <%= f.file_field :file -%>
   </br>
    <%= submit_tag 'Importar Localidades' -%>
<% end %>
</br>

<div class="pager">
	<%= paginate @towns %>
</div>


