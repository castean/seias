<h3>Lista de Estrategias del Programa Prioritario</h3>

<table class="table table-striped">
  <thead>
	  <tr>
	  	<th>Objetivo</th>
	    <th>Estrategia</th>
	    <th>Descripción</th>
	    <th></th>
	    <th></th>
	    <th></th>
	  </tr>
	</thead>

<% @priority_program_strategies.each do |priority_program_strategy| %>
  <tr>
  	<td><%= priority_program_strategy.priority_program_goal.name %></td>
    <td><%= priority_program_strategy.name %></td>
    <td><%= priority_program_strategy.description %></td>
    <td><%= link_to 'Lineas de Acción', priority_program_strategy %></td>
    <% if can? :update, priority_program_strategy %>
    <td><%= link_to(edit_priority_program_strategy_path(priority_program_strategy)) do %>
    		<%= image_tag("edit.png")%>
    	<%end%>
    </td>
    <%end%>
    <% if can? :destroy, priority_program_strategy %>
    <td><%= link_to(priority_program_strategy, :confirm => '¿Esta usted seguro?', :method => :delete, :remote => true) do%>
    		<%= image_tag("delete.png")%>
    	<%end%>
    </td>
    <%end%>
  </tr>
<% end %>
</table>

<br />
<% if can? :create, @priority_program_strategies %>
	<%= link_to 'Agregar Estrategia', new_priority_program_strategy_path, :class => "btn primary" %>
<%end%>