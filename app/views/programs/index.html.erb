<h1>Lista de Programas</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Departmento</th>
    <th>Responsable</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @programs.each do |program| %>
  <% u = User.find(program.responsable_id) %>
  <tr>
    <td><%= program.name %></td>
    <td><%= program.description %></td>
    <td><%= Department.find(program.department_id).name %></td>
    <td><%= u.name.to_s + ' ' + u.last_name.to_s + ' ' + u.second_last_name.to_s %></td>
    <td><%= link_to 'Mostrar', program %></td>
    <td><%= link_to 'Editar', edit_program_path(program) %></td>
    <td><%= link_to 'Destruir', program, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Programa', new_program_path %>
