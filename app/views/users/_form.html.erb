<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>Imposible guardar Usuario</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  </br>
  <div>
  	<%= f.label :avatar, "Foto" %>
  	<%= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= f.label :login, "Usuario" %>
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :last_name, "Apellido Paterno" %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :second_last_name, "Apellido Materno" %>
    <%= f.text_field :second_last_name %>
  </div>
  <div class="field">
    <%= f.label :email, "Correo Electrónico" %>
    <%= f.text_field :email %>
  </div>
  <% unless Seias::Application.config.ldap_auth %>
	  <div class="field">
	    <%= f.label :password, "Contraseña" %>
	    <%= f.password_field :password %>
	  </div>
	  <div class="field">
	    <%= f.label :password_confirmation, "Confirmar Contraseña" %>
	    <%= f.password_field :password_confirmation %>
	  </div>
  <% end %>
  <div class="field">
    <%= f.label :roles, "Rol" %>
    <%= f.collection_select :roles, User::ROLES, :to_s, :titleize %>
  </div>
  <div class="field">
    <%= f.label :department_id, "Departamento" %>
    <%= f.collection_select :department_id,  Department.order("name").all, :id, :name, options ={:prompt => "-- Selecciona el Departamento --"}%>
  </div>
  </br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
